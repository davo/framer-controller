{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["es2015", "dom", "esnext"],
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules", "dist", "examples", "docs", "test"],
	"typedocOptions": {
		"mode": "modules",
		"out": "docs"
	}
}
